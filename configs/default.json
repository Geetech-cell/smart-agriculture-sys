{
  "data_path": "data/sample_crop_data.csv",
  "target": "yield_t_per_ha",
  "feature_columns": [
    "avg_temp_c",
    "avg_rainfall_mm",
    "soil_moisture_pct",
    "ndvi",
    "soil_ph",
    "pest_pressure_idx",
    "fertilizer_kg_per_ha",
    "region",
    "crop",
    "season"
  ],
  "categorical_features": [
    "region",
    "crop",
    "season"
  ],
  "test_size": 0.2,
  "random_state": 42,
  "model_params": {
    "n_estimators": 200,
    "max_depth": null,
    "min_samples_split": 5,
    "min_samples_leaf": 2,
    "max_features": "sqrt",
    "bootstrap": true,
    "random_state": 42,
    "n_jobs": -1
  },
  "feature_engineering": {
    "polynomial_degree": 2,
    "interaction_terms": true,
    "temporal_features": true,
    "create_interactions": [
      ["avg_temp_c", "avg_rainfall_mm"],
      ["soil_moisture_pct", "fertilizer_kg_per_ha"]
    ]
  },
  "cross_validation": {
    "cv_folds": 5,
    "scoring": "neg_mean_absolute_error",
    "n_iter": 20,
    "randomized_search": true
  },
  "data_processing": {
    "outlier_threshold": 3.0,
    "scale_features": true,
    "feature_selection": true
  }
}

